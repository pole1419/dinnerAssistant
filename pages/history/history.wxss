page {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.history {
  padding-top: 40rpx;
  flex: 1;
}

.history-item {
  box-sizing: border-box;
  width: 100%;
  padding: 10rpx;
  display: flex;
  justify-content: space-around;
}

.no_record {
    display: flex;
    flex-direction: column;
}
.no_record img {
    width: 100%
}
.no_record text {
    padding: 20rpx;
    text-align: center;
    color: rgba(0,0,0,.5);
    line-height: 60rpx;
}
button {
  width: 100%;
}
